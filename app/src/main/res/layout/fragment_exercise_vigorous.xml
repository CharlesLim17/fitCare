<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exerciseVigorousFragment"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/custom_action_bar"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="FitCare"
            android:textColor="#FEFED3"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="34dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="10sp"
            android:text="Exercises - Vigorous"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appBar" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.112"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:srcCompat="@drawable/fitcare_line" />

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="@+id/appBar"
            app:layout_constraintHorizontal_bias="0.069"
            app:layout_constraintStart_toStartOf="@+id/appBar"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />

        <FrameLayout
            android:id="@+id/videoFrame"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView2">

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </FrameLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/videoFrame"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/squats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Squats"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="20dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/descSquats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:textSize="16sp"
                        android:text="Stand with your feet at a shoulder width distance \napart. Hold your hands at a chest level. Bend your \nknees and move your hips backwards. Rise back \nup and repeat."
                        android:textColor="#595959"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/squats"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/squatJumps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Squat Jumps"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="20dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/descSquatJumps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:textSize="16sp"
                        android:text="Stand with your feet at a shoulder width \ndistance apart. Bend your knees and do a squat \nposition. Jump so that the feet would be a few \ninches off the floor and immediately repeat the \nsteps upon landing."
                        android:textColor="#595959" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/planks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Planks"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="20dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/descPlanks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:textSize="16sp"
                        android:text="Perform the position, one forearm on the floor \nand a foot supporting your body facing \nsidewards. Keep the body straight. Hold this \nposition for the allotted time. Perform the \nposition, face down with your forearms on the \nfloor and your feet apart. Keep the body \nstraight. Hold this position for the allotted time."
                        android:textColor="#595959" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/russianTwist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Russian Twist"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="20dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/descRussianTwists"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:textSize="16sp"
                        android:text="Sit and lift the feet from the floor, keep the knees \nbent. Straighten the upper body at a 45-degree \nangle from the floor. Clasp your hands together \nand twist to one side then the other, keep \nalternating."
                        android:textColor="#595959" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/legRaise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Leg Raise"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="20dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/descLegRaise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:textSize="16sp"
                        android:text="Lie on your back with your legs together and \nstraight. Lift them up until they point to the \nceiling and lower them back down."
                        android:textColor="#595959" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mountainClimb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Mountain Climb"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="20dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/descMountainClimb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:textSize="16sp"
                        android:text="Perform the position, hands on the floor \nshoulders straightened and on your toes. Keep \nthe body straight. Pull on knee to your chest. \nSwitch from one knee to the other and \nkeep alternating."
                        android:textColor="#595959" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/triceps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Triceps"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="20dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/descTriceps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:textSize="16sp"
                        android:text="Sit on the bench with your hands next to your \nsides. Extend your legs and lift your body off the \nbench using your arms. Lower your body down \nand push back up through your palms."
                        android:textColor="#595959" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pushups"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Push-ups"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="20dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/descPushups"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:textSize="16sp"
                        android:text="Begin in an all-fours position and straighten \nyour legs. Bend the elbows backward, lowering \nyour chest close to the floor. Push your body \nback up and repeat."
                        android:textColor="#595959" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/burpee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Burpee"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="20dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/descBurpee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:textSize="16sp"
                        android:text="Stand with feet shoulder-width apart and hands \nby your sides. Squat down and place your palms \non the floor. Jump your legs out behind you. "
                        android:textColor="#595959" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/jumpingJacks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Jumping Jacks"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="20dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/descJumpingJacks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:textSize="16sp"
                        android:text="Stand straight with your arms by your sides then \njump and spread your legs while stretching your \narms out over your head. Jump back to the \nstarting position."
                        android:textColor="#595959" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/calfRaise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Calf Raise"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="20dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/descCalfRaise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:textSize="16sp"
                        android:text="Stand straight with your arms by your sides and \npush your heel up then lower them slowly."
                        android:textColor="#595959" />

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnMic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="34dp"
            android:layout_marginBottom="34dp"
            android:backgroundTint="#CFEAC3"
            android:src="@drawable/mic_navbar"
            android:tint="@color/ateneo_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
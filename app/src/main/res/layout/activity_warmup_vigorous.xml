<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".warmupVigorous"
    android:fillViewport="true"
    android:background="#EFEFEF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/custom_action_bar"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="FitCare"
            android:textColor="#FEFED3"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnBack"
            android:layout_marginTop="20dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_white" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="10sp"
            android:text="Warm up - Vigorous"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appBar" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.079"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle"
            app:srcCompat="@drawable/fitcare_line" />

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@android:color/background_dark"
            app:controller_layout_id="@layout/custom_controller"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView2"
            app:player_layout_id="@layout/exo_player_view"
            app:use_controller="true" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            app:layout_constraintBottom_toBottomOf="@+id/player"
            app:layout_constraintEnd_toEndOf="@+id/player"
            app:layout_constraintStart_toStartOf="@+id/player"
            app:layout_constraintTop_toTopOf="@+id/player" />

        <HorizontalScrollView
            android:id="@+id/hSV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/player"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/squats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shoulder Rolls"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="24dp"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="20dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/descSquats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="24dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:textSize="16sp"
                        android:text="Rotate the shoulders in a forward direction \nmaking circles with them and then rotate them \nbackwards."
                        android:textColor="#595959"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/squats"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/squatJumps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="24dp"
                        android:text="Side Taps"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="20dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/descSquatJumps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="24dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:textSize="16sp"
                        android:text="Step one foot out sideways and tap it down \nback to the center. Stretch the arm on the same \nside to the opposite direction. Repeat the same \nstep with the other foot and arm to the other \nside and keep alternating."
                        android:textColor="#595959" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/planks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="24dp"
                        android:text="Arm Circles"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="20dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/descPlanks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="24dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:textSize="16sp"
                        android:text="Raise the arms to the sides without bending the \nelbows and slowly rotate them forward  \nmaking circles."
                        android:textColor="#595959" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/russianTwist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="24dp"
                        android:text="Knee Lifts"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="20dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/descRussianTwists"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="24dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:textSize="16sp"
                        android:text="Lift the knee to the chest and meet it with the \npalm of the hand on the other side. Repeat the \nsame step with the other foot and hand \nand keep alternating."
                        android:textColor="#595959" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/legRaise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="24dp"
                        android:text="Heel Taps"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="20dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/descLegRaise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="24dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:textSize="16sp"
                        android:text="Step forward using your heel and tap it back \nto the center. Repeat the same step with the \nother foot and keep alternating."
                        android:textColor="#595959" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mountainClimb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="34dp"
                        android:text="Jog in Place"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="20dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/descMountainClimb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="28dp"
                        android:layout_marginEnd="34dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="8sp"
                        android:textSize="16sp"
                        android:text="Lift one foot and raise the arm at the same time.\nAs soon as you land from one foot quickly\nhop the other and swing the arm in front back \nand the other arm forwards at same time. \nRepeat this process continuously for the \nduration of the exercise."
                        android:textColor="#595959" />

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
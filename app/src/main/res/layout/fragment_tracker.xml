<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    tools:context=".trackerFragment"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/custom_action_bar"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="FitCare"
            android:textColor="#FEFED3"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnBack"
            android:layout_marginTop="20dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_white" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="24dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="10sp"
            android:text="Workout Tracker"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appBar" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.079"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:srcCompat="@drawable/fitcare_line" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:fontFamily="sans-serif-medium"
            android:text="Weight Tracker"
            android:textColor="#303030"
            android:lineSpacingExtra="6dp"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView2" />

        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:src="@drawable/edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/txtHolderCurWeight"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/custom_settings_weight"
            android:elevation="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/txtRetrieveCurWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:elevation="12dp"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/txtHolderCurWeight"
            app:layout_constraintStart_toStartOf="@+id/txtHolderCurWeight"
            app:layout_constraintTop_toTopOf="@+id/txtHolderCurWeight" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:fontFamily="sans-serif"
            android:text="Current Weight"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/txtHolderCurWeight"
            app:layout_constraintStart_toStartOf="@+id/txtHolderCurWeight"
            app:layout_constraintTop_toBottomOf="@+id/txtRetrieveCurWeight" />

        <TextView
            android:id="@+id/txtHolderPrevWeight"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/custom_settings_height"
            android:elevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/txtRetrievePrevWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:elevation="12dp"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/txtHolderPrevWeight"
            app:layout_constraintStart_toStartOf="@+id/txtHolderPrevWeight"
            app:layout_constraintTop_toTopOf="@+id/txtHolderPrevWeight" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:fontFamily="sans-serif"
            android:text="Previous Weight"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/txtHolderPrevWeight"
            app:layout_constraintStart_toStartOf="@+id/txtHolderPrevWeight"
            app:layout_constraintTop_toBottomOf="@+id/txtRetrievePrevWeight" />

        <TextView
            android:id="@+id/txtHolderGoal"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/custom_tracker_goal"
            android:elevation="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtHolderPrevWeight" />

        <TextView
            android:id="@+id/txtRetrieveGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:elevation="12dp"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/txtHolderGoal"
            app:layout_constraintStart_toStartOf="@+id/txtHolderGoal"
            app:layout_constraintTop_toTopOf="@+id/txtHolderGoal" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:fontFamily="sans-serif"
            android:text="Goal Weight"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/txtHolderGoal"
            app:layout_constraintStart_toStartOf="@+id/txtHolderGoal"
            app:layout_constraintTop_toBottomOf="@+id/txtRetrieveGoal" />

        <TextView
            android:id="@+id/txtHolderBmi"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/custom_tracker_bmi"
            android:elevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtHolderPrevWeight" />

        <TextView
            android:id="@+id/txtRetrieveBmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:elevation="12dp"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/txtHolderBmi"
            app:layout_constraintStart_toStartOf="@+id/txtHolderBmi"
            app:layout_constraintTop_toTopOf="@+id/txtHolderBmi" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:fontFamily="sans-serif"
            android:text="Your BMI"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/txtHolderBmi"
            app:layout_constraintStart_toStartOf="@+id/txtHolderBmi"
            app:layout_constraintTop_toBottomOf="@+id/txtRetrieveBmi" />

        <TextView
            android:id="@+id/txtHolderVS"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/custom_tracker_vs"
            android:elevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtHolderGoal" />

        <TextView
            android:id="@+id/txtRetrieveVS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:elevation="12dp"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/txtHolderVS"
            app:layout_constraintStart_toStartOf="@+id/txtHolderVS"
            app:layout_constraintTop_toTopOf="@+id/txtHolderVS" />

        <TextView
            android:id="@+id/txtDescVS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:fontFamily="sans-serif"
            android:text="Current vs Previous"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/txtHolderVS"
            app:layout_constraintStart_toStartOf="@+id/txtHolderVS"
            app:layout_constraintTop_toBottomOf="@+id/txtRetrieveVS" />

        <TextView
            android:id="@+id/txtHolderAchieveGoal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/custom_settings_bmi"
            android:elevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtHolderVS" />

        <TextView
            android:id="@+id/txtRetrieveToAchieveGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:elevation="12dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:lineSpacingExtra="8dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/txtHolderAchieveGoal"
            app:layout_constraintStart_toStartOf="@+id/txtHolderAchieveGoal"
            app:layout_constraintTop_toTopOf="@+id/txtHolderAchieveGoal" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="2dp"
            android:text="To Achieve Goal"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/txtHolderAchieveGoal"
            app:layout_constraintStart_toStartOf="@+id/txtHolderAchieveGoal"
            app:layout_constraintTop_toBottomOf="@+id/txtRetrieveToAchieveGoal" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="24dp"
            android:fontFamily="sans-serif-medium"
            android:text="Workout History"
            android:textColor="#303030"
            android:lineSpacingExtra="6dp"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtHolderAchieveGoal" />

        <TextView
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/custom_setting_btn"
            android:elevation="12dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:paddingLeft="62dp"
            android:text="Workout history"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginStart="20dp"
            android:elevation="12dp"
            android:src="@drawable/history_icon"
            app:layout_constraintStart_toStartOf="@+id/btnHistory"
            app:layout_constraintTop_toTopOf="@+id/btnHistory" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>